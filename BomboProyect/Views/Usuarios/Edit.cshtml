                    @Html.LabelFor(model => model.Telefono, "Número teléfonico:", htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Correo, "Correo electronico:", htmlAttributes: new { @class = "form-label" })

