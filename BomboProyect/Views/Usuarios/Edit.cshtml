                    </div>
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "form-text text-danger" })
                </div>

                <div class="d-grid">
                    <button class="btn btn-success" type="submit"><i class="fa-solid fa-pen me-2"></i>Editar</button>
                </div>

            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
