@model IEnumerable<BomboProyect.Models.Ventas>

@{
    ViewBag.Title = "Index";
}

<h2>Ventas</h2>

<p>
    @Html.ActionLink("Registrar Nueva Venta", "Create", null, null, new { @class = "btn btn-primary"})
</p>
<table class="table" style="padding-left: 25px; padding-right: 25px">
    <tr>
        <th>
            Fecha Venta
        </th>
        <th>
            Hora Venta
        </th>
        <th>
            Estatus
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fechaventa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraVenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.VentaId})
        </td>
    </tr>
}

</table>
