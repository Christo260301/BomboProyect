@model BomboProyect.Models.Ventas

@{
    ViewBag.Title = "Create";
}

<h2>Registrar nueva venta</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="row" style="padding-right: 20px; padding-left: 20px;">
            <div class="col-md-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="form-label col-md-4">Usuario</label>
                    <div class="col-md-8">
                        <input type="text" name="usuario" value="" readonly placeholder="TO DO" class="form-control" />
                    </div>
                </div> <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaVenta, "Fecha Venta", htmlAttributes: new { @class = "form-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FechaVenta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaVenta, "", new { @class = "text-danger" })
                    </div>
                </div> <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.HoraVenta, "Hora Venta", htmlAttributes: new { @class = "form-label  col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.HoraVenta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoraVenta, "", new { @class = "text-danger" })
                    </div>
                </div> <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Status, "Estatus", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Status)
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div> <br />
            </div>
            <div class="col-md-8">
                <div id="divProductos"></div>
            </div>
        </div>
        
        <div class="row text-center">
            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#divProductos").load("_ListProductos");
        });
    </script>
}
