@model IEnumerable<BomboProyect.Models.Compras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<div class="container">
    <h2 class="mt-5">Compras</h2>

    <div class="mt-3">
        <a href="@Url.Action("Create", "Compras")" class="btn btn-secondary">
            <i class="fa-solid fa-plus"></i>
            <span>Nueva Compra</span>
        </a>
    </div>
    <br />

    <table class="table mt-2 text-center" id="myTable">
        <thead class="table-dark">
            <tr class="header">
                <th>
                    Numero de Compra
                </th>
                <th>
                    Fecha de la Compra
                </th>
                <th>
                    Hora de la Compra
                </th>
                <th>
                    Estatus
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <b>
                            @{ i++;}
                            @i
                        </b>
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.FechaCompra).ToString().Substring(0, 10)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraCompra).ToString().Substring(11)
                    </td>
                    <td>

                        @if (item.Status)
                        {
                            <p><span class="badge bg-success">Activo</span></p>
                        }
                        else
                        {
                            <p><span class="badge bg-danger">Cancelada</span></p>
                        }

                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <div>
                                <a href="@Url.Action("Details", "Compras", new { id = item.ComprasId })" class="btn btn-warning btn-icon">
                                    <i class="fa-solid fa-info"></i>
                                </a>
                            </div>
                            @if (item.Status)
                            {
                                <div>
                                    <a href="@Url.Action("Cancelar", "Compras", new { id = item.ComprasId })" class="btn btn-danger btn-icon">
                                        <i class="fa-solid fa-ban"></i>
                                    </a>
                                </div>
                            }
                            else { }
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>