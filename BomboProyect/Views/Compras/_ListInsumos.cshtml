@model List<BomboProyect.Models.Insumos>


@{ Layout = null; }

<table class="table table-bordered text-center">
    <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Precio C/U</th>
        <th>Cantidad a Comprar </th>
        <th>Unidad</th>
    </tr>

    @for (var i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td hidden><input value="@Model[i].InsumoId" name="[@i].InsumoId" type="hidden" /></td>
            <td>@Model[i].Nombre</td>
            <td>@Model[i].Descripcion</td>
            <td hidden><input value="@Model[i].Precio" name="[@i].Precio" type="hidden" /></td>
            <td>@Model[i].Precio</td>
            <td><input name="[@i].Cantidad" type="number" min="0" value=0 class="form-control" /></td>
            <td hidden><input value="@Model[i].Unidad" name="[@i].Unidad" type="hidden" /></td>
            <td>@Model[i].Unidad</td>
        </tr>
    }

</table>


