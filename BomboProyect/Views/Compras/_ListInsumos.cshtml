@model List<BomboProyect.Models.Insumos>


@{ Layout = null; }

<table class="table table-bordered text-center">
    <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Precio C/U</th>
        <th>Unidad</th>
        <th>Cantidad Neta</th>
        <th>Existencias</th>
        <th>Contenido Total</th>
        <th>Cantidad de Existencias a Comprar</th>
    </tr>

    @for (var i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td hidden><input value="@Model[i].InsumoId" name="[@i].InsumoId" type="hidden" /></td>
            <td>@Model[i].Nombre</td>
            <td>@Model[i].Descripcion</td>
            <td>@Model[i].Precio</td>
            <td hidden><input type="hidden" name="[@i].Precio" value="@Model[i].Precio" /></td>
            <td>@Model[i].Unidad</td>
            <td hidden><input type="hidden" name="[@i].Unidad" value="@Model[i].Unidad" /></td>
            <td>@Model[i].CantidadNeta</td>
            <td>@Model[i].Existencias</td>
            <td>@Model[i].ContenidoTot</td>
            <td><input name="[@i].Existencias" type="number" min="0" value=0 class="form-control" /></td>
            
        </tr>
    }

</table>


