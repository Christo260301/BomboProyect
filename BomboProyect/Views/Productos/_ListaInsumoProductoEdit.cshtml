@model List<BomboProyect.Models.DetProducto>

@{ Layout = null; }

<input type="hidden" value="0" name="ContElement" id="ContElement" />
<input type="hidden" value="" name="ContElmeJson" id="ContElmeJson" />
<h5>Insumos Seleccionados</h5>
<input type="hidden" name="InsumosRemovidos" id="InsumosRemovidos" value=""/>
<table class="table">
    <thead class="table-secondary">
        <tr>
            <th>Nombre</th>
            <th>Cantidad Total</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbod>
    @*<tbody id="tbContainer">*@
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr id="ID_@(Model[i].Insumo.InsumoId + "_" + Model[i].Insumo.Nombre)">
                <td id="DataElement" hidden>
                    <input value="@Model[i].Insumo.InsumoId" name="[@i].Insumo.InsumoId" type="hidden" />
                    <input value="@Model[i].Insumo.Nombre" name="[@i].Insumo.Nombre" type="hidden" />
                    <input value="@Model[i].Insumo.Descripcion" name="[@i].Insumo.Descripcion" type="hidden" />
                    <input value="@Model[i].Insumo.Precio" name="[@i].Insumo.Precio" type="hidden" />
                    <input value="@Model[i].Insumo.Unidad" name="[@i].Insumo.Unidad" type="hidden" />
                    <input value="@Model[i].Insumo.CantidadNeta" name="[@i].Insumo.CantidadNeta" type="hidden" />
                    <input value="@Model[i].Insumo.Existencias" name="[@i].Insumo.Existencias" type="hidden" />
                    <input value="@Model[i].Insumo.ContenidoTot" name="[@i].Insumo.ContenidoTot" type="hidden" />
                    <input value='@(Model[i].Insumo.Status ? "true" : "false")' name="[@i].Insumo.Status" type="hidden" />
                </td>
                <td>@Model[i].Insumo.Nombre</td>
                <td><input name="[@i].Insumo.CantProduc" type="number" min="0" value=@Model[i].Cantidad class="form-control" /></td>
                <td>
                    <div class="d-flex justify-content-start">
                        <button type="button" onclick="removeInsumo(@Json.Encode(Model[i].Insumo), true)" class="btn btn-danger">
                            <i class="fa-solid fa-minus"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbod>
</table>