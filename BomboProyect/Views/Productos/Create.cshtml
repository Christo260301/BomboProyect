@model BomboProyect.Models.Productos

@{
    ViewBag.Title = "Alta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-6">
            <h2>Alta de Productos</h2>
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index", "Productos")" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i>
                    <span>Regresar al listado</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-10 shadow p-3 mb-5 bg-body rounded">
            <h4 class="mb-3">Datos Generales</h4>
            <!-- FORMULARIO DE PRODUCTO -->
            @using (Html.BeginForm("Create", "Productos", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row justify-content-between g-4" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "form-text text-danger" })
                <div class="col-auto">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })
                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "form-text text-danger" })
                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "form-text text-danger" })
                </div>

                @*<div class="col-auto" hidden>
                    @Html.LabelFor(model => model.Existencias, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Existencias, new { htmlAttributes = new { @class = "form-control", type = "hidden", value = "0" } })
                    @Html.ValidationMessageFor(model => model.Existencias, "", new { @class = "form-text text-danger" })
                </div>*@

                <input type="hidden" name="Foto" value="Foto" />

                <div class="col-auto">
                    @Html.LabelFor(model => model.Fotografia, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Fotografia, new { htmlAttributes = new { @class = "form-control", id = "Fotografia" } })
                    @*<input class="form-control" type="file" name="Fotografia" id="Fotografia" required />*@
                    @Html.ValidationMessageFor(model => model.Fotografia, "", new { @class = "form-text text-danger" })
                </div>

                <div class="col-12 d-flex justify-content-center px-3">
                    <img id="img-preview">
                    <i id="i-eliminar-img" class="bi bi-x-circle-fill ms-2 text-danger hidden fs-5"></i>
                </div>

                <!-- SELECCION DE MATERIAS PRIMAS -->
                <h4 class="mb-3">Materiales</h4>
                <div class="row justify-content-between">
                    <div class="col-5 table-scroll">
                        <h5>Insumos Disponibles</h5>
                        <table class="table">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Cantidad Neta</th>
                                    <th>Unidad de Medida</th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ins in ViewBag.insumos)
                                {
                                    <tr>
                                        <td>@ins.Nombre</td>
                                        <td>@ins.CantidadNeta</td>
                                        <td>@ins.Unidad</td>
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <button type="button" onclick="addInsumo(@Json.Encode(ins))" class="btn btn-secondary">
                                                    <i class="fa-solid fa-plus"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="col-5  table-scroll" id="divInsumos">

                    </div>

                    @if (ViewBag.validInsumoList != null)
                    {
                        if (ViewBag.validInsumoList == true)
                        {
                            <div class="d-flex justify-content-end">
                                <span class="text-danger">La cantidad de los insumos debe ser mayor a 0</span>
                            </div>
                        }

                    }

                </div>

                <div class="d-grid">
                    <button class="btn btn-success" type="submit">Registrar</button>
                </div>
            }


        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/productos")

    <script>
        $(document).ready(function () {
            $("#divInsumos").load("_ListaInsumoProducto")
        })
    </script>
}