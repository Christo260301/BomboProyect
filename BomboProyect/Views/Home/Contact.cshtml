@{
    ViewBag.Title = "Contact";
}


<section class="">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-9 align-items-center">
                <center>
                    <div class="col-lg-9 mb-5 mb-lg-5">
                        <div class="card">
                            <div class="card-body py-10 px-md-5">
                                <center>
                                    <form>
                                        <div class="row mb-6">
                                            <h3>@ViewBag.Message</h3>
                                        </div>
                                        <hr />
                                        <div class="row mb-5">
                                            <div class="col-6">
                                                <div class="form-outline">
                                                    <input type="text" id="form6Example1" class="form-control" />
                                                    <label class="form-label" for="form6Example1">Nombre</label>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-outline">
                                                    <input type="text" id="form6Example2" class="form-control" />
                                                    <label class="form-label" for="form6Example2">Apellido</label>
                                                </div>
                                            </div>

                                            <div class="col">
                                                <div class="form-outline mb-4">
                                                    <input type="email" id="form6Example5" class="form-control" />
                                                    <label class="form-label" for="form6Example5">Correo</label>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-outline mb-4">
                                                    <input type="number" id="form6Example6" class="form-control" />
                                                    <label class="form-label" for="form6Example6">Teléfono</label>
                                                </div>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="text" id="form6Example5" class="form-control" />
                                                <label class="form-label" for="form6Example5">Asunto</label>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <textarea class="form-control" id="form6Example7" rows="4"></textarea>

                                                <label class="form-label" for="form6Example7">Descripción del asunto</label>
                                            </div>
                                            <div>
                                                <button type="submit" class="btn btn-primary btn-block mb-2">Enviar</button>
                                            </div>
                                        </div>
                                    </form>
                                </center>
                            </div>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
</section>



