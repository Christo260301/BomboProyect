<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/cddc159071.js" crossorigin="anonymous"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class=" navbar fixed-top navbar-expand-sm navbar-light" style="background-color: #E9E613;">
        <div class="container-fluid">
            <ul class="navbar-nav ">
                <li class="nav-item ">
                    <a class="navbar-brand" href="#">
                        <img src="~/app/img/LOGO.png" width="300" height="60" />
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav col-md-4 justify-content-end">
                <li class="nav-item justify-content-center">
                    <h5>
                        <a class="nav-link" aria-current="page" href="#">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        </a>
                    </h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link active" aria-current="page" href="#">
                            @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "nav-link" })
                        </a>
                    </h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link active" aria-current="page" href="#">
                            @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })
                        </a>
                    </h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link px-2 text-muted">
                            @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home", null, new { @class = "nav-link" })
                        </a>
                    </h5>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid mt-4">
        @RenderBody()
    </div>

    <div class="container-fluid">
        <footer class="d-flex flex-wrap justify-content-between align-items-center border-top">
            <br />

            <ul class="nav col-md-4 justify-content-around">
                <li class="nav-item">
                    <a href="#" class="nav-link text-muted text-center">
                        <h5>© Panaderia Bombo, Inc.</h5>
                    </a>
                </li>
            </ul>

            <ul class="nav col-md-4 justify-content-center">
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-muted text-center">
                        <img src="~/app/img/mapa.png" width="50" height="50" />
                        Blvd. Juan Alonso de Torres Pte. 1315, Jardines de Los Naranjos,
                        Santa Rosa de Lima Sur, 37200 León, Gto.
                    </a>
                </li>
            </ul>


            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item">
                    <a href="https://www.facebook.com/" class="nav-link px-2 text-muted">
                        <img src="~/app/img/facebook.png" width="60" height="60" />
                    </a>
                </li>

                <li class="nav-item">
                    <a href="https://twitter.com/home?lang=es" class="nav-link px-2 text-muted">
                        <img src="~/app/img/logotipo-de-twitter.png" width="60" height="60" />
                    </a>
                </li>

                <li class="nav-item">
                    <a href="https://www.instagram.com/" class="nav-link px-2 text-muted">
                        <img src="~/app/img/instagram.png" width="60" height="60" />
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/core")
    @RenderSection("scripts", required: false)
</body>
</html>
