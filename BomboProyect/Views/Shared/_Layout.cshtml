<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/cddc159071.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light bg-light fixed-top bg-brown">
        <div class="">
            <button class="navbar-toggler mx-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="~/app/img/LogoBombo.png" width="300" height="60" />
            </a>

            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header bg-brick">
                    @if (ViewBag.ssUsuario == null)
                    {
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Bienvenido</h5>
                    }
                    else
                    {
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">@ViewBag.ssUsuario.Nombre</h5>
                    }

                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">

                        @if (ViewBag.ssUsuario != null)
                        {
                            if (ViewBag.ssUsuario.Rol.RolId == 1 && ViewBag.ssUsuario.Rol.RolId == 2)
                            {
                                <li class="nav-item">
                                    <h5>
                                        <a class="nav-link" aria-current="page" href="#">
                                            @Html.ActionLink("Productos", "Index", "Productos", null, new { @class = "nav-link" })
                                        </a>
                                    </h5>
                                </li>
                            }


                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link" aria-current="page" href="#">
                                        @Html.ActionLink("Insumos", "Contact", "Home", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>


                            if (ViewBag.ssUsuario.Rol.RolId == 1)
                            {
                                <li class="nav-item">
                                    <h5>
                                        <a class="nav-link" aria-current="page" href="#">
                                            @Html.ActionLink("Roles", "Index", "Roles", null, new { @class = "nav-link" })
                                        </a>
                                    </h5>
                                </li>
                            }

                            if (ViewBag.ssUsuario.Rol.RolId == 1 && ViewBag.ssUsuario.Rol.RolId == 2)
                            {
                                <li class="nav-item">
                                    <h5>
                                        <a class="nav-link" aria-current="page" href="#">
                                            @Html.ActionLink("Compras", "Index", "Compras", null, new { @class = "nav-link" })
                                        </a>
                                    </h5>
                                </li>
                            }

                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link" aria-current="page" href="#">
                                        @Html.ActionLink("Ventas", "Index", "Ventas", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link" aria-current="page" href="#">
                                        @Html.ActionLink("Registrar Usuario", "Create", "Usuarios", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link px-2 text-muted">
                                        @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link px-2 text-muted">
                                        @Html.ActionLink("Contactanos", "Contact", "Home", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>

                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link px-2 text-muted">
                                        @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <h5>
                                    <a class="nav-link px-2 text-muted">
                                        @Html.ActionLink("Iniciar Sesion", "Index", "Acceso", null, new { @class = "nav-link" })
                                    </a>
                                </h5>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
