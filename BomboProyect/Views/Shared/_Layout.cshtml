<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <script src="https://kit.fontawesome.com/cddc159071.js" crossorigin="anonymous"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class=" navbar fixed-top navbar-expand-sm navbar-dark" style="background-color: #795548;">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="navbar-brand" href="#">Logo</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>

    <div class="container-fluid">
        <footer class="d-flex flex-wrap justify-content-between align-items-center border-top">
            <br />
            <p class="col-md-4 mb-0 text-muted">© Panadderia Bombo, Inc.</p>


            <ul class="nav col-md-4 justify-content-center">
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-muted">
                        <img src="https://cdn-icons-png.flaticon.com/64/992/992710.png" />
                    </a>
                </li>
            </ul>


            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item">
                    <a href="https://www.facebook.com/" class="nav-link px-2 text-muted">
                        <i class="fa-brands fa-facebook fa-2x" style="color: #145790;"></i>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="https://twitter.com/home?lang=es" class="nav-link px-2 text-muted">
                        <i class="fa-brands fa-twitter fa-2x" style="color: #14b9ee;"></i>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="https://www.instagram.com/" class="nav-link px-2 text-muted">
                        <i class="fa-brands fa-instagram fa-2x" style="color: #de7b4c;"></i>
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/core")
    @RenderSection("scripts", required: false)
</body>
</html>
