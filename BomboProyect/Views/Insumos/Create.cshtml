@model BomboProyect.Models.Insumos

@{
    ViewBag.Title = "Alta";
}

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-6">
            <h2>Alta de Insumos</h2>
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index", "Insumos")" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i>
                    <span>Regresar al listado</span>
                </a>
            </div>
        </div>
    </div>


    <div class="row justify-content-center mt-3">
        <div class="col-6 shadow p-3 mb-5 bg-body rounded">
            @using (Html.BeginForm("Create", "Insumos", FormMethod.Post, new { @class = "row justify-content-between g-4" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "form-text text-danger" })

                <div class="col-auto">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "form-text text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "form-text text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Unidad, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Unidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Unidad, "", new { @class = "form-text text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.CantidadNeta, "Cantidad Neta", htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.CantidadNeta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CantidadNeta, "", new { @class = "form-text text-danger" })

                </div>

                @*<div class="col-auto">
                    @Html.LabelFor(model => model.ContenidoTot, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.ContenidoTot, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ContenidoTot, "", new { @class = "form-text text-danger" })

                </div>

                <div class="col-auto">
                    @Html.LabelFor(model => model.Existencias, htmlAttributes: new { @class = "form-label" })

                    @Html.EditorFor(model => model.Existencias, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Existencias, "", new { @class = "form-text text-danger" })

                </div>*@

                @*<div class="col-auto">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "form-label" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Status)
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                    </div>*@


                <div class="d-grid">
                    <button class="btn btn-success" type="submit">Registrar</button>
                </div>

            }
        </div>
    </div>
</div>


